    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine",
            "protocol": "inspector",
            "args": ["${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
                "--config=spec/support/jasmine-ts.json"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [ "-r", "ts-node/register" ],
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}